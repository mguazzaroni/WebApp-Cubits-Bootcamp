@model List<Product>

    <div class="row">
        <div class="col-lg-12">
            <h2>Lista de productos</h2>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nombre</th>
                        <th>Descripcion</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.Name</th>
                            <th>@item.Description</th>
                            <th>@item.Price</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>